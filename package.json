{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require test/setup.js",
    "dev": "nodemon src/server.js",
    "predeploy": "npm audit",
    "deploy": "git push heroku main",
    "postdeploy": "npm run migreate:production",
    "migrate": "postgrator --config postgrator.config.js",
    "migreate:test": "env NODE_ENV=test npm run migrate",
    "migrate:production": "heroku run npm run migrate",
    "db:seed": "psql -U noteful -d noteful -f ./seeds/seed.notes_and_folders.sql",
    "start": "node src/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "heroku": "^7.47.11",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "pg": "^8.5.1",
    "postgrator": "^4.1.1",
    "supertest": "^6.1.3",
    "winston": "^3.3.3",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "knex": "^0.21.16",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "postgrator-cli": "^3.3.0"
  }
}
